<!DOCTYPE html>
<html lang="es">
    <%- include('load/head') %>
<body>

  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg navbar-dark sticky-top">
    <div class="container">
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav mx-auto">
          <li class="nav-item">
            <a class="nav-link" href="#menu">Menú</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#gallery">Galería</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <!-- Menu Section -->
  <section id="menu" class="py-3">
    <div class="container">
      <h2 class="text-center section-header mb-4">Nuestras Tiendas</h2>
      
      <!-- Menu Item 1 -->
      <div class="menu-card bg-white shadow-sm">
        <div class="menu-img-container">
          <img src="../public/img/tacos-img.png" alt="logo img" class="menu-img">
          <span class="menu-badge">4.3 (300+)</span>
          <span class="best-seller-tag">N.º1</span>
        </div>
        <div class="menu-content">
          <h3 class="menu-title">El bilsito</h3>
          <p class="menu-category">Tacos/Mexicana</p>
          
          <div>
            <span class="menu-rating"><i class="bi bi-star-fill"></i> 4.5</span>
            <span>10-25 min</span>
          </div>
          
          <div class="menu-delivery-info">
            <div>
              <span class="menu-price">MX$40</span>
              <span class="menu-old-price">MX$50</span>
              <div class="menu-savings">Ahorra 20%</div>
            </div>
            <div class="text-end">
              <span class="text-success"><i class="bi bi-bicycle"></i> Envío a $20</span>
            </div>
          </div>
        </div>
      </div>      

    </div>
  </section>

  <br>
  <hr>
  <br>
  <br>

  <!-- Gallery Section -->
  <section id="gallery" class="py-5 bg-white">
    <div class="container">
      <h2 class="text-center section-header">Galería</h2>
      
      <div class="row g-4">
        <div class="col-4">
          <img src="../public/img/slider_gallery.jpg" class="img-fluid gallery-img" alt="Slider 1">
        </div>
        <div class="col-4">
          <img src="../public/img/slider_gallery_2.jpg" class="img-fluid gallery-img" alt="Slider 2">
        </div>
        <div class="col-4">
          <img src="../public/img/slider_gallery_3.jpg" class="img-fluid gallery-img" alt="Slider 3">
        </div>
        
        <!-- Puedes añadir más imágenes aquí -->
      </div>
    </div>
  </section>

  <!-- Footer -->
  <footer class="bg-dark text-white py-4">
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-md-8 text-center">
          <p class="mb-3">&copy; 2025 ByTezz. Todos los derechos reservados.</p>
          
          <div class="d-flex justify-content-center mb-3">
            <a href="#" class="text-white text-decoration-none mx-3">Inicio</a>
            <a href="#menu" class="text-white text-decoration-none mx-3">Menú</a>
            <a href="#" class="text-white text-decoration-none mx-3" data-bs-toggle="modal" data-bs-target="#contactModal">
              Contacto
            </a>
          </div>
          
          <div class="social-icons">
            <a href="#" class="text-white mx-2"><i class="bi bi-instagram fs-4"></i></a>
            <a href="#" class="text-white mx-2"><i class="bi bi-facebook fs-4"></i></a>
            <a href="#" class="text-white mx-2"><i class="bi bi-twitter fs-4"></i></a>
          </div>
        </div>
      </div>
    </div>
  </footer>

  <!-- Bootstrap JS Bundle with Popper -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script src="../public/js/app.js"></script>
</body>
</html>