<!DOCTYPE html>
<html lang="es">
    <%- include('load/head') %>
<body>

  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg navbar-dark sticky-top">
    <div class="container">
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav mx-auto">
          <li class="nav-item">
            <a class="nav-link" href="#menu">Menú</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#gallery">Galería</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#offers">Ofertas</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#delivery">Delivery</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <!-- Menu Section -->
  <section id="menu" class="py-3">
    <div class="container">
      <h2 class="text-center section-header mb-4">Nuestras Tiendas</h2>
      
      <!-- Menu Item 1 -->
      <div class="menu-card bg-white shadow-sm">
        <div class="menu-img-container">
          <img src="../public/img/icon-shops.jpg" alt="Hamburguesa sencilla" class="menu-img">
          <span class="menu-badge">4.3 (300+)</span>
          <span class="best-seller-tag">N.º1</span>
        </div>
        <div class="menu-content">
          <h3 class="menu-title">El bilsito</h3>
          <p class="menu-category">Tacos/Mexicana</p>
          
          <div>
            <span class="menu-rating"><i class="bi bi-star-fill"></i> 4.5</span>
            <span>10-25 min</span>
          </div>
          
          <div class="menu-delivery-info">
            <div>
              <span class="menu-price">MX$40</span>
              <span class="menu-old-price">MX$50</span>
              <div class="menu-savings">Ahorra 20%</div>
            </div>
            <div class="text-end">
              <span class="text-success"><i class="bi bi-bicycle"></i> Envío a $20</span>
            </div>
          </div>
        </div>
      </div>      

    </div>
  </section>

  <!-- Gallery Section -->
  <section id="gallery" class="py-5 bg-white">
    <div class="container">
      <h2 class="text-center section-header">Galería</h2>
      
      <div class="row g-4">
        <div class="col-4">
          <img src="../public/img/slider_gallery.jpg" class="img-fluid gallery-img" alt="Slider 1">
        </div>
        <div class="col-4">
          <img src="../public/img/slider_gallery_2.jpg" class="img-fluid gallery-img" alt="Slider 2">
        </div>
        <div class="col-4">
          <img src="../public/img/slider_gallery_3.jpg" class="img-fluid gallery-img" alt="Slider 3">
        </div>
        
        <!-- Puedes añadir más imágenes aquí -->
      </div>
    </div>
  </section>

  <!-- Offers Section -->
  <section id="offers" class="py-5 bg-light">
    <div class="container text-center">
      <h2 class="section-header">Ofertas Especiales</h2>
      
      <div class="row justify-content-center">
        <div class="col-md-8">
          <div class="p-4 bg-white rounded-3 shadow-sm mb-4">
            <h3 class="text-danger mb-3">¡Combo 3x2!</h3>
            <p class="lead mb-4">Llévate 3 hamburguesas al precio de 2. Aprovecha esta oferta por tiempo limitado.</p>
            <a href="https://wa.me/525661267101" class="btn btn-primary-custom btn-lg rounded-pill">
              <i class="bi bi-whatsapp me-2"></i>Ordenar por WhatsApp
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Delivery Section -->
  <section id="delivery" class="py-5 bg-white">
    <div class="container text-center">
      <h2 class="section-header">¡Entrega a Domicilio!</h2>
      
      <div class="row justify-content-center">
        <div class="col-md-8">
          <div class="p-4 mb-4">
            <i class="bi bi-truck text-danger" style="font-size: 2.5rem;"></i>
            <p class="lead mt-3">Recibe tus sliders favoritos donde estés, ¡rápido y caliente!</p>
            
            <div class="mt-4">
              <p class="text-muted mb-3">También estamos en:</p>
              <div class="d-flex justify-content-center gap-4 flex-wrap">
                <img src="../public/img/uber-eats-1.svg" alt="Uber Eats" class="delivery-icon">
                <img src="../public/img/rappi-seeklogo.png" alt="Rappi" class="delivery-icon">
                <img src="../public/img/didi-chuxing.svg" alt="Didi Food" class="delivery-icon">
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Contact Modal -->
  <div class="modal fade" id="contactModal" tabindex="-1" aria-labelledby="contactModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content">
        <div class="modal-header bg-danger text-white">
          <h5 class="modal-title" id="contactModalLabel">Contáctanos</h5>
          <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <div class="d-flex align-items-center mb-3">
            <i class="bi bi-whatsapp text-success me-3" style="font-size: 1.5rem;"></i>
            <div>
              <h6 class="mb-0">WhatsApp</h6>
              <p class="mb-0">+52 566 126 7101</p>
            </div>
          </div>
          <div class="d-flex align-items-center">
            <i class="bi bi-envelope text-primary me-3" style="font-size: 1.5rem;"></i>
            <div>
              <h6 class="mb-0">Correo electrónico</h6>
              <p class="mb-0">contacto@sliderburgers.com</p>
            </div>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cerrar</button>
          <a href="https://wa.me/525661267101" class="btn btn-danger">
            <i class="bi bi-whatsapp me-1"></i>Enviar mensaje
          </a>
        </div>
      </div>
    </div>
  </div>

  <!-- Footer -->
  <footer class="bg-dark text-white py-4">
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-md-8 text-center">
          <p class="mb-3">&copy; 2023 ByTezz. Todos los derechos reservados.</p>
          
          <div class="d-flex justify-content-center mb-3">
            <a href="#" class="text-white text-decoration-none mx-3">Inicio</a>
            <a href="#menu" class="text-white text-decoration-none mx-3">Menú</a>
            <a href="#" class="text-white text-decoration-none mx-3" data-bs-toggle="modal" data-bs-target="#contactModal">
              Contacto
            </a>
          </div>
          
          <div class="social-icons">
            <a href="#" class="text-white mx-2"><i class="bi bi-instagram fs-4"></i></a>
            <a href="#" class="text-white mx-2"><i class="bi bi-facebook fs-4"></i></a>
            <a href="#" class="text-white mx-2"><i class="bi bi-twitter fs-4"></i></a>
          </div>
        </div>
      </div>
    </div>
  </footer>

  <!-- Bootstrap JS Bundle with Popper -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script src="../public/js/app.js"></script>
</body>
</html>